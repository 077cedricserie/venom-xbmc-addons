<?xml version="1.0" encoding="UTF-8"?>

<includes>

<!--galerie-->
    <include name="Viewtype581">

        <control type="group">
            <visible>Control.IsVisible(581)</visible>

			<control type="wraplist" id="581">
				<top>510</top>
                <left>-80</left>
                <width>2736</width>
                <height>700</height>
				<onleft>52</onleft>
				<onright>52</onright>
                <onup condition="!Skin.HasSetting(KioskMode)">3001</onup>
				<ondown>61</ondown>
				<viewtype label="Galerie">List</viewtype>
				<scrolltime tween="Quadratic" easing="out">300</scrolltime>
				<orientation>horizontal</orientation>
				<preloaditems>2</preloaditems>
				<focusposition>11</focusposition>
				<pagecontrol>-</pagecontrol>
				<visible>Container.Content(Movies) | Container.Content(Sets) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes) | Container.Content(MusicVideos)</visible>
				<itemlayout width="58" height="800">
					<control type="label">
						<left>47</left>
						<top>355</top>
						<width>670</width>
						<height>58</height>
						<textcolor>TextColor2</textcolor>
						<font>Font50</font>
						<scroll>false</scroll>
						<angle>90</angle>
						<align>left</align>
						<aligny>top</aligny>
						<label>$INFO[ListItem.label]</label>
					</control>
                    <!-- Watched status -->
                    <control type="image">
                        <left>75</left>
                        <top>365</top>
                        <width>14</width>
                        <height>14</height>
                        <texture>$VAR[StatusOverlay]</texture>
                        <colordiffuse>OverlayColorNF</colordiffuse>
                        <animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
                    </control>
				</itemlayout>
				<focusedlayout width="695" height="380">
					<control type="group">
                        <include>FocusAnim</include>

						<left>60</left>
						<control type="image">
							<width>675</width>
							<height>380</height>
							<aspectratio aligny="center" align="center">stretch</aspectratio>
							<texture background="true" fallback="thumbs/fallback_fanart_big_tp.png">$VAR[mediaImages_landscape]</texture>
							<fadetime>400</fadetime>
						</control>
						<control type="image">
							<left>80</left>
							<width>515</width>
							<height>290</height>
							<aspectratio aligny="center" align="center">keep</aspectratio>
							<texture background="true" fallback="thumbs/fallback_fanart_tp.png">$VAR[mediaImages_Clearlogo]</texture>
							<fadetime>400</fadetime>
							<visible>[[Container.Content(TVShows) | Container.Content(Seasons)] + String.IsEqual(Skin.String(GalleryViewWideThumbTVShows),3)] | [[Container.Content(Movies) | Container.Content(Sets)] + String.IsEqual(Skin.String(GalleryViewWideThumbMovies),3)]</visible>
						</control>
                        <control type="image">
                            <width>675</width>
                            <height>380</height>
                            <aspectratio>stretch</aspectratio>
                            <texture background="true">border.png</texture>
                        </control>
                        <!-- Watched status -->
    					<control type="image">
                            <left>570</left>
                            <top>360</top>
                            <width>30</width>
                            <height>42</height>
                        	<texture>$VAR[StatusOverlayWide]</texture>
    					</control>
					</control>

					<control type="label">
						<left>100</left>
						<top>320</top>
						<height>30</height>
						<width>595</width>
						<textcolor>TextColor1</textcolor>
						<font>Font33</font>
						<align>left</align>
						<label>[LIGHT]$INFO[ListItem.Label][/LIGHT]</label>
						<visible>!ListItem.IsParentFolder</visible>
						<visible>![[Container.Content(TVShows) | Container.Content(Seasons)] + [[String.IsEqual(Skin.String(GalleryViewWideThumbTVShows),2) + !String.IsEmpty(ListItem.Art(landscape))] | [String.IsEqual(Skin.String(GalleryViewWideThumbTVShows),3) + !String.IsEmpty(ListItem.Art(clearlogo))]]]</visible>
						<visible>![[Container.Content(Movies) | Container.Content(Sets)] + [[String.IsEqual(Skin.String(GalleryViewWideThumbMovies),2) + !String.IsEmpty(ListItem.Art(landscape))] | [String.IsEqual(Skin.String(GalleryViewWideThumbMovies),3) + !String.IsEmpty(ListItem.Art(clearlogo))]]]</visible>
					</control>
				</focusedlayout>
			</control>

		</control>

    </include>

</includes>
